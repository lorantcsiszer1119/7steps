<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div data-alert class="alert-box alert text-center" style="margin: 0 auto; position: absolute; left: 0; right: 0; top: 0; display:table; vertical-align:middle; width: 100%; height: 100%;">
    	<span style="display:table-cell; vertical-align:middle;">
      		<%= content_tag :div, msg, :id => "flash_#{name}" %>
        	<a href="#" class="close" style="display:table-cell; vertical-align:middle; top:35%;">&times;</a>
        </span>
    </div>
  <% end %>
<% end %>